{
  "name": "unojs",
  "version": "1.0.3",
  "description": "An instrument for recording videos and capturing films to be sent to Jira, Zoho, etc.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:esm": "tsc --outDir dist/esm --watch",
    "dev:sass": "sass src/styles:dist/esm/css --no-source-map --watch",
    "build": "npm run build:esm && npm run build:cjs && npm run sass",
    "build:esm": "tsc --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "sass": "sass src/styles:dist/esm/css --no-source-map && sass src/styles:dist/cjs/css --no-source-map"
  },
  "dependencies": {
    "sass": "^1.64.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "sass-loader": "^13.3.2",
    "webpack": "^5.88.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Uno-Feedback/UnoJs.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Uno-Feedback/UnoJs/issues"
  },
  "homepage": "https://github.com/Uno-Feedback/UnoJs#readme"
}
