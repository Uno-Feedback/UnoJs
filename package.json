{
  "name": "unojs",
  "version": "1.0.3",
  "description": "An instrument for recording videos and capturing films to be sent to Jira, Zoho, etc.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently --kill-others \"tsc --outDir dist/esm --watch\" \"sass src/styles:dist/esm/css --no-source-map --watch\"  \"npm run example\"",
    "example": "webpack-dev-server --hot --magic-html",
    "build": "npm run build:esm && npm run build:cjs && npm run sass",
    "build:esm": "tsc --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "sass": "sass src/styles:dist/esm/css --no-source-map && sass src/styles:dist/cjs/css --no-source-map"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.1",
    "path": "^0.12.7",
    "sass": "^1.64.1",
    "sass-loader": "^13.3.2",
    "style-loader": "^3.3.3",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-dev-server": "^4.15.1",
    "wepack-cli": "^0.0.1-security"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Uno-Feedback/UnoJs.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Uno-Feedback/UnoJs/issues"
  },
  "homepage": "https://github.com/Uno-Feedback/UnoJs#readme"
}
